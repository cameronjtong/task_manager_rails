<%= provide(:title, @list.name) %>
<h1><%= @list.name %></h1>
<% if @list.tasks.any? %>
<%= render 'shared/tasks' %>
<% end %>

<%=form_with(model: @list.tasks.build, local: true) do |f| %>

<%= hidden_field_tag :id, @list.id %>

<%= f.label :content %>
<%= f.text_field :content %>

<%= f.submit 'Add Task', class: 'btn btn-primary' %>
<% end %>
<%= link_to 'Delete List', @list, method: :delete,
                                  data: {confirm: "You sure?"} %>