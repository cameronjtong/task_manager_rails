<% provide(:title, 'Home') %>
<div class='center jumbotron'>
<h1>Task Manager</h1>

<p>
Create and manage your various tasks!
</p>
<div>
<% if logged_in? %>
<%= link_to('Create new list', new_list_path, class: "btn btn-success") %>
<%= link_to('View my lists', lists_path, class: 'btn btn-info') %>
<% else %>
<%= link_to('Login', login_path, class: "btn btn-success") %>
<%= link_to('Sign up', signup_path, class: 'btn btn-info') %>
<% end %>
</div>
</div>

